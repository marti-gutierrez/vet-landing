{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layout/*": [
        "src/layout/*"
      ],
      "@images/*": [
        "src/assets/images/*"
      ],
      "@fonts/*": [
        "src/assets/fonts/*"
      ]
    },
  }
}